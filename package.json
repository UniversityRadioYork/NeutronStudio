{
  "name": "neutron-studio",
  "version": "0.0.1",
  "description": "Like WebStudio, but surrounded by Electrons. Aimed to be the in-studio front end for BAPSicle.",
  "main": "app.js",
  "scripts": {
    "start": "electron-forge start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "electron-forge package",
    "make": "npm install && electron-forge make"
  },
  "keywords": [
    "BAPS",
    "BAPSicle",
    "Audio",
    "Playout",
    "WebStudio",
    "Electron"
  ],
  "author": "Unversity Radio York",
  "license": "",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "electron": "^14.0.0",
    "electron-reloader": "^1.2.1"
  },
  "dependencies": {
    "concurrently": "^6.1.0",
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.0.0",
    "wait-on": "^6.0.0"
  },
  "homepage": "./",
  "config": {
    "forge": {
      "packagerConfig": {
        "ignore": [
          "/.psd/"
        ],
        "name": "BAPS3 Presenter",
        "icon": "resources/logo/baps3-small"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "neutron-studio"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "name": "neutron-studio"
          }
        }
      ]
    }
  }
}
